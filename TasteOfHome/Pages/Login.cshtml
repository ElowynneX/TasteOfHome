@page
@model TasteOfHome.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-wrapper">

    <div class="auth-card">

        <div class="auth-logo">
            🍴
        </div>

        <h2 class="auth-title">Welcome Back</h2>
        <p class="auth-subtitle">
            Login to continue discovering authentic food.
        </p>

        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <div class="auth-error">
                @Model.Error
            </div>
        }



        <form method="post">

            <div class="form-group">
                <input class="form-control auth-input"
                       asp-for="Email"
                       placeholder="Email" />
            </div>

            <div class="form-group">
                <input class="form-control auth-input"
                       asp-for="Password"
                       type="password"
                       placeholder="Password" />
            </div>

            <button type="submit" class="btn btn-toh w-100">
                Login
            </button>

        </form>

        <div class="auth-divider">
            <span>OR</span>
        </div>

        <a class="btn-google" href="/login-google">
            <i class="bi bi-google"></i>
            Continue with Google
        </a>

        <div class="auth-footer">
            Don’t have an account?
            <a asp-page="/Register">Register</a>
        </div>

    </div>

</div>