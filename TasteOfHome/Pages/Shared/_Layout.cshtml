@using TasteOfHome.Data;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TasteOfHome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TasteOfHome.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header class="toh-navbar">
        <div class="toh-nav-left">
            <div class="logo-circle">🍴</div>
            <span class="logo-text">TasteOfHome</span>
        </div>

        <div class="toh-nav-right">
            <a class="toh-nav-link" asp-page="/Index">
                <i class="bi bi-house"></i> Home
            </a>

            @if ((User.Identity != null && User.Identity.IsAuthenticated)
                        || !string.IsNullOrEmpty(TasteOfHome.Data.FakeUsers.LoggedInEmail))
            {
                <a class="toh-nav-link" asp-page="/Profile">
                    <i class="bi bi-person"></i> Profile
                </a>

                <a class="toh-nav-link" href="/logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            }
            else
            {
                <a class="toh-nav-link" asp-page="/Login">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>

                <a class="toh-nav-link" asp-page="/Register">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            }
        </div>
    </header>

    <div class="container-fluid px-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - TasteOfHome - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>